<Window x:Class="Info_module.Pages.TableMenus.After_College_Selection.CurriculumMenu.CurriculumSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Info_module.Pages.TableMenus.After_College_Selection.CurriculumMenu"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CurriculumSubject" Height="400" Width="500">
    <Viewbox Stretch="Fill">
        <Grid Height="384" Width="500">
            <Grid x:Name="subject_grid" Margin="50,10,50,10" Background="White">
                <TextBox x:Name="subjectId_txt" HorizontalAlignment="Left" Margin="73,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" IsReadOnly="True" Height="30" TextBlock.FontSize="20" Visibility="Hidden"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="Serving College:" VerticalAlignment="Top" FontSize="20" Width="148" Height="30"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Subject Code:" VerticalAlignment="Top" Height="30" FontSize="20"/>
                <TextBox x:Name="subjectCode_txt" Margin="138,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="129" Height="30" TextBlock.FontSize="20"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="Subject Title:" VerticalAlignment="Top" Height="30" FontSize="20"/>
                <TextBox x:Name="subjectTitle_txt" TextWrapping="Wrap" VerticalAlignment="Top" Height="70" Margin="10,120,10,0" TextBlock.FontSize="20"/>
                <ComboBox x:Name="subjectType_cmbx" HorizontalAlignment="Left" Margin="15,225,0,0" VerticalAlignment="Top" Width="159" FontSize="10" SelectedValuePath="Tag" Height="30" TextBlock.FontSize="20">
                    <ComboBoxItem Content="Major" Tag="major"/>
                    <ComboBoxItem Content="Minor" Tag="minor"/>
                </ComboBox>
                <TextBlock HorizontalAlignment="Left" Margin="15,195,0,0" TextWrapping="Wrap" Text="Subject Type:" VerticalAlignment="Top" Height="30" FontSize="20"/>
                <ComboBox x:Name="lecLab_cmbx" HorizontalAlignment="Left" Margin="210,225,0,0" VerticalAlignment="Top" Width="168" FontSize="10" SelectedValuePath="Tag" Height="30" TextBlock.FontSize="20">
                    <ComboBoxItem Content="Lecture" Tag="LEC"/>
                    <ComboBoxItem Content="Laboratory" Tag="LAB"/>
                </ComboBox>
                <TextBlock HorizontalAlignment="Left" Margin="210,195,0,0" TextWrapping="Wrap" Text="LEC/LAB:" VerticalAlignment="Top" Height="30" FontSize="20"/>
                <TextBlock HorizontalAlignment="Left" Margin="41,272,0,0" TextWrapping="Wrap" Text="Hours:" VerticalAlignment="Top" RenderTransformOrigin="0.468,0.877" Height="30" FontSize="20"/>
                <TextBox x:Name="hours_txt" Margin="103,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="30" TextBlock.FontSize="20"/>
                <TextBlock HorizontalAlignment="Left" Margin="210,272,0,0" TextWrapping="Wrap" Text="Units:" VerticalAlignment="Top" Height="30" FontSize="20"/>
                <TextBox x:Name="units_txt" Margin="265,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="30" TextBlock.FontSize="20"/>
                <ComboBox x:Name="servingDepartment_cmbx" HorizontalAlignment="Left" Margin="163,50,0,0" VerticalAlignment="Top" Width="145" FontSize="10" SelectedIndex="0" Height="30" TextBlock.FontSize="20"/>
                <Button x:Name="add_btn" Content="Add" VerticalAlignment="Top" Height="30" FontSize="10" Click="add_btn_Click" TextBlock.FontSize="20" Margin="250,324,50,0"/>
                <Button x:Name="update_btn" Content="Update" VerticalAlignment="Top" Click="update_btn_Click" Height="30" FontSize="10" TextBlock.FontSize="20" Margin="270,324,30,0" Visibility="Hidden"/>
                <Button x:Name="cancel_btn" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="cancel_btn_Click" Height="30" FontSize="10" TextBlock.FontSize="20" Margin="50,324,0,0"/>
            </Grid>

        </Grid>
    </Viewbox>
</Window>
