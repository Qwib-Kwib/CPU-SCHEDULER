<Window x:Class="Info_module.Pages.TableMenus.After_College_Selection.InstructorMenu.InstructorMenuAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Info_module.Pages.TableMenus.After_College_Selection.InstructorMenu"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Add Instructor" Height="400" Width="500">
    <Grid>
        <Viewbox Margin="10,10,10,10" Height="364" Stretch="Fill">
            <Grid Height="364" Width="480">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="141*"/>
                    <ColumnDefinition Width="299*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="employeeId_txt" HorizontalAlignment="Left" Margin="21,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Height="25" FontSize="16" Grid.ColumnSpan="2"/>
                <TextBox x:Name="firstName_txt" HorizontalAlignment="Left" Margin="21,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="26" FontSize="16" Grid.ColumnSpan="2"/>
                <TextBox x:Name="middleName_txt" HorizontalAlignment="Left" Margin="21,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="24" FontSize="16" Grid.ColumnSpan="2"/>
                <TextBox x:Name="email_txt" HorizontalAlignment="Left" Margin="89,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Height="26" FontSize="14" Grid.Column="1"/>
                <TextBox x:Name="lastName_txt" HorizontalAlignment="Left" Margin="21,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="26" FontSize="16" Grid.ColumnSpan="2"/>
                <TextBlock HorizontalAlignment="Left" Margin="21,10,0,0" TextWrapping="Wrap" Text="Employee ID:" VerticalAlignment="Top" Height="25" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="21,204,0,0" TextWrapping="Wrap" Text="First Name:" VerticalAlignment="Top" Height="25" FontSize="16"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" Text="Middle Name:" VerticalAlignment="Top" Height="26" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="21,82,0,0" TextWrapping="Wrap" Text="Last Name:" VerticalAlignment="Top" Height="26" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="89,10,0,0" TextWrapping="Wrap" Text="Employee Type:" VerticalAlignment="Top" Width="128" FontSize="16" Height="25" Grid.Column="1"/>
                <TextBlock HorizontalAlignment="Left" Margin="89,71,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="91" Height="26" FontSize="16" Grid.Column="1"/>
                <RadioButton x:Name="male_rbtn" Content="Male" HorizontalAlignment="Left" Margin="89,165,0,0" VerticalAlignment="Top" Width="77" Height="25" FontSize="16" Grid.Column="1"/>
                <RadioButton x:Name="female_rbtn" Content="Female" HorizontalAlignment="Left" Margin="171,165,0,0" VerticalAlignment="Top" Width="85" FontSize="16" Height="25" Grid.Column="1"/>
                <TextBlock HorizontalAlignment="Left" Margin="89,134,0,0" TextWrapping="Wrap" Text="Sex:" VerticalAlignment="Top" Width="30" Height="25" FontSize="16" Grid.Column="1"/>
                <Button x:Name="add_btn" Content="Add" Margin="130,3,69,3" Width="100" Height="30" Click="add_btn_Click" Grid.Row="1" Grid.Column="1"/>
                <CheckBox x:Name="disability_ckbox" Content="Disability" HorizontalAlignment="Center" Margin="0,226,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.479,0.734" Height="25" FontSize="16" Grid.Column="1"/>
                <Button x:Name="cancel_btn" Content="Cancel" Margin="70,3,270,3" Width="100" Height="30" Click="cancel_btn_Click" Grid.Row="1" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="employeeType_cmbx" VerticalAlignment="Top" Margin="89,35,55,0" Height="25" FontSize="16" SelectedIndex="0" Grid.Column="1">
                    <ComboBoxItem Content="Full-Time" Tag="Full-Time"/>
                    <ComboBoxItem Content="Part-Time" Tag ="Part-Time"/>
                </ComboBox>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
