        xmlns:local="clr-namespace:Info_module.Pages.TableMenus.CollegeMenu"
        mc:Ignorable="d"
                ResizeMode="NoResize"
        Title="CollegeMenuAdd" Height="500" Width="600">
    <Grid>
        <Viewbox Margin="10,0,10,0" Stretch="Fill">
            <Grid Height="484" Width="580">
                <TextBlock TextWrapping="Wrap" Text="Building Code:" Margin="242,10,158,444" Height="30" FontSize="20"/>
                <TextBox x:Name="deparmentCode_txt" TextWrapping="Wrap" Margin="10,50,380,404" Height="30" FontSize="20"/>
                <TextBlock TextWrapping="Wrap" Text="College Name:" Margin="10,105,390,349" Height="30" FontSize="20"/>
                <TextBox x:Name="departmentName_txt" TextWrapping="Wrap" Margin="10,140,10,274" Height="70" FontSize="20"/>
